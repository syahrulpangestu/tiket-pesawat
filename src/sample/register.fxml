<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="458.0" prefWidth="520.0" style="-fx-background-color: #ECECE7;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RegisterController">
    <children>
        <AnchorPane prefHeight="82.0" prefWidth="520.0" style="-fx-background-color: #0099FF;">
            <children>
                <ImageView fx:id="shieldImageView" fitHeight="42.0" fitWidth="69.0" layoutX="32.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/shield.png" />
                    </image>
                </ImageView>
                <Label layoutX="99.0" layoutY="30.0" text="User Registration" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label layoutX="94.0" layoutY="114.0" text="Username">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="usernameRegisterTextField" layoutX="92.0" layoutY="134.0" prefHeight="42.0" prefWidth="336.0" promptText="Username" />
        <Label layoutX="94.0" layoutY="182.0" text="Email">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="emailRegisterTextField" layoutX="92.0" layoutY="202.0" prefHeight="42.0" prefWidth="336.0" promptText="Email" />
        <Label layoutX="94.0" layoutY="249.0" text="Password">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <PasswordField fx:id="setRegisterPasswordField" layoutX="92.0" layoutY="268.0" prefHeight="42.0" prefWidth="336.0" promptText="Password" />
