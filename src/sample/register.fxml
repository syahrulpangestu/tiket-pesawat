            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <Button fx:id="closeRegisterButton" layoutX="92.0" layoutY="401.0" mnemonicParsing="false" onAction="#cancelButtonOnAction" prefHeight="29.0" prefWidth="336.0" style="-fx-background-color: #0099FF;" text="Close" textFill="#fff9f9">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
      <Label fx:id="registerMessageLabel" layoutX="150.0" layoutY="323.0" prefHeight="21.0" prefWidth="221.0" />
    </children>
</AnchorPane>
